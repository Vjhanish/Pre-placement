class Solution(object):
    def hasIncreasingSubarrays(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: bool
        """
       
        last=0
        curr=1
        maxi=0
        m=0
        if k==1 and len(nums)>1:
            return True

        for i in range(1,len(nums)):
            if nums[i]>nums[i-1]:
                curr+=1
            else:
                last=curr
                curr=1
            maxi=max(maxi,min(curr,last))
            m=max(m,curr)
            if maxi>=k:
                return True

        if m>=k*2:
            return True
        return False               
  

class Solution {
    public long minimumSteps(String s) {
        long answer = 0;
        int len = s.length();
        int whiteballindex = len-1;        
        for(int i = len -1; i>=0; --i)
        {
            char c = s.charAt(i);
            if(c == '1')
            {
                answer += whiteballindex - i;
                whiteballindex--;
            }
        }
        return answer;
    }
}
